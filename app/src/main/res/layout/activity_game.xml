<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".game.GameActivity">
    <TextView
            android:id="@+id/gameScore"
            android:textSize="@dimen/gs_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gs_marginTop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <com.mrololo.sapper.game.view.FieldView
            android:id="@+id/fieldView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/fv_marginTop"
            android:longClickable="true"
            app:layout_constraintTop_toBottomOf="@+id/gameScore"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h, 1:1"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_marginBottom"
            app:backgroundTint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <SeekBar
            android:id="@+id/bombsAmountBar"
            android:layout_width="@dimen/baBar_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fieldView"
            android:max="10"
            android:layout_marginBottom="@dimen/baBar_marginBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <SeekBar
            android:id="@+id/fieldSizeBar"
            android:layout_width="@dimen/fsBar_width"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:max="10"
            android:layout_marginBottom="@dimen/fsBar_marginBottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/aboutFieldBar"
            android:textSize="@dimen/afb_textSize"
            android:text="@string/field_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/afb_marginEnd"
            android:layout_marginStart="@dimen/afb_marginStart"
            app:layout_constraintTop_toBottomOf="@+id/fieldSizeBar"
            app:layout_constraintEnd_toStartOf="@+id/startButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fieldSizeInfo"/>
    <TextView
            android:id="@+id/aboutBombsBar"
            android:textSize="@dimen/abb_textSize"
            android:text="@string/bombs_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/abb_marginEnd"
            android:layout_marginStart="@dimen/abb_marginStart"
            app:layout_constraintTop_toBottomOf="@+id/bombsAmountBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/startButton"
            app:layout_constraintBottom_toTopOf="@id/bombsAmountInfo"/>
    <TextView
            android:id="@+id/fieldSizeInfo"
            android:textSize="@dimen/fsi_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fsi_marginTop"
            android:layout_marginStart="@dimen/fsi_marginStart"
            android:layout_marginBottom="@dimen/fsi_marginBottom"
            android:layout_marginEnd="@dimen/fsi_marginEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/startButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutFieldBar"/>
    <TextView
            android:id="@+id/bombsAmountInfo"
            android:textSize="@dimen/bai_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/bai_marginEnd"
            android:layout_marginBottom="@dimen/bai_marginBottom"
            android:layout_marginTop="@dimen/bai_marginTop"
            android:layout_marginStart="@dimen/bai_marginStart"
            app:layout_constraintStart_toEndOf="@+id/startButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutBombsBar"/>
</android.support.constraint.ConstraintLayout>